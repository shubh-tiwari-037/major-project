<%-layout("/layouts/boilerplate") %>
<body>
    
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br><br>
            <h3>Create a new listing</h3>
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
            <div class="valid-feedback">Title loocks good !</div>
        </div>
     
        <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
            <textarea name="listing[description]"  class="form-control" required></textarea>
            <div class="invalid-feedback">please enter a short description !</div>
        </div>
        <!-- <div class="mb-3">
            <lable for="image" class="form-lable">Image link</lable>
            <input name="listing[image]" placeholder="enter image url/link" type="text" class="form-control">
        </div> -->

        <div class="mb-3">
            <lable for="image" class="form-lable"> Upload listing Image </lable>
            <input name="listing[image]"  type="file" class="form-control" required>
        </div>

        <div class="row">
       <div class="mb-3 col-md-4">
        <lable for="price" class="form-lable">Price</lable>
        <input name="listing[price]" placeholder="enter price"  class="form-control" required>
        <div class="invalid-feedback"> price should be valid !</div>
       </div>
        
       <div class="mb-3 col-md-8">
        <lable for="country" class="form-lable">country</lable>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
        <div class="invalid-feedback">country name  should be valid !</div>
       </div>
      </div>


       <div class="mb-3">
        <lable for="location" class="form-lable">location</lable>
        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
        <div class="invalid-feedback">location should be valid !</div>
    </div>
        
        <button class="btn btn-dark add-btn mt-3">Add</button>

        <br><br><br>
    </form>
</div>
</div>
</body>
</html>